<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pers.ash.shiro.mapper.PermissionMapper">

	<!-- ========================== 【 基本增删改查 】  =========================== -->
	<select id="findById" parameterType="String"
		resultType="Permission">
		SELECT * FROM shiro_permission WHERE id=#{id}
	</select>

	<select id="findAll" parameterType="String"
		resultType="Permission">
		SELECT * FROM shiro_permission
	</select>

	<insert id="add" parameterType="Permission">
		INSERT INTO
		shiro_permission(id,name,description)
		VALUES(#{id},#{name},#{description})
	</insert>

	<delete id="delete" parameterType="String">
		DELETE FROM shiro_permission
		WHERE
		id=#{id}
	</delete>

	<update id="update" parameterType="Permission">
		UPDATE shiro_permission SET
		name=#{name},description=#{description}
		WHERE
		id=#{id}
	</update>
	<!-- ================================================================== -->
</mapper>